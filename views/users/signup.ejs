<% layout('layouts/boilerplate.ejs') -%>

    <style>
        * {
            box-sizing: border-box; /* Ensures padding and borders are included in the element's width and height */
        }

        body {
            font-family: Arial, sans-serif;
            background-color: black;
            color: white;
            margin: 0;
            padding: 0;
        }

        .signup-container {
            width: 100%;
            max-width: 400px;
            margin: 150px auto;
            background-color: #333;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(255, 140, 0, 0.5);
            overflow: hidden; /* Prevents overflow of content */
        }

        .signup-container h2 {
            color: orange;
            text-align: center;
            margin-bottom: 30px;
            font-size: 28px;
        }

        .signup-container label {
            color: white;
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .signup-container input[type="text"],
        .signup-container input[type="email"],
        .signup-container input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid orange;
            border-radius: 5px;
            background-color: #26272b;
            color: white;
            outline: none;
        }

        .signup-container input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: orange;
            border: none;
            border-radius: 5px;
            color: black;
            font-weight: bold;
            font-size: 16px;
            cursor: pointer;
        }

        .signup-container input[type="submit"]:hover {
            background-color: #e68a00;
        }

        .signup-container .login-link {
            text-align: center;
            margin-top: 10px;
        }

        .signup-container .login-link a {
            color: orange;
            text-decoration: none;
        }

        .signup-container .login-link a:hover {
            color: #ffb84d;
        }
    </style>
<body>

<div class="signup-container">
    <h2>Signup</h2>
    <form action="/login/signup" method="POST">
        <label for="username-signup">Username:</label>
        <input type="text" id="username-signup" name="username" placeholder="Enter your username" required>

        <label for="email-signup">Email:</label>
        <input type="email" id="email-signup" name="email" placeholder="Enter your email" required>

        <label for="password-signup">Password:</label>
        <input type="password" id="password-signup" name="password" placeholder="Enter your password" required>

        <input type="submit" value="Signup">

        <div class="login-link">
            <a href="/login/user">Already have an account? Login</a>
        </div>
    </form>
</div>

</body>